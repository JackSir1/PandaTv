<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/personal_return_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/fenlei_fanhui"
       />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textColor="@color/colorWhite"
        android:text="个人中心"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/colorHui"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/personal_linear_login"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/personal_login"
                android:layout_width="wrap_content"
                android:paddingLeft="5dp"
                android:layout_height="wrap_content"
                android:src="@drawable/personal_login_head"/>
            <TextView
                android:id="@+id/personal_login_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="点击登录"
                android:paddingLeft="15dp"
                android:layout_gravity="center_vertical"
                android:textSize="18dp"/>
        </LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="3dp" />
    <LinearLayout
        android:id="@+id/personal_linear_watch_history"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorWhite"
        android:layout_height="70dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/personal_history_img"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="观看历史"
            android:paddingLeft="15dp"
            android:layout_gravity="center_vertical"
            android:textSize="18dp"
          />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/personal_enter_img"
            />
    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp" />
        <LinearLayout
            android:id="@+id/personal_linear_mineshoucang"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorWhite"
            android:layout_height="70dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/personal_shoucang_img"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="我的收藏"
                android:paddingLeft="15dp"
                android:layout_gravity="center_vertical"
                android:textSize="18dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/personal_enter_img"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp" />
        <LinearLayout
            android:id="@+id/personal_linear_setting"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorWhite"
            android:layout_height="70dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/personal_set_img"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="设置"
                android:paddingLeft="15dp"
                android:layout_gravity="center_vertical"
                android:textSize="18dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/personal_enter_img"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp" />
</LinearLayout>
</LinearLayout>