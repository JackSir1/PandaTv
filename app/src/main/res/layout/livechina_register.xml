<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:padding="15dp">

        <ImageView
            android:id="@+id/login_return_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/fenlei_fanhui" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            />

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorHui">
    <RadioGroup
        android:id="@+id/userfankui_radiogroup"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/userfankui_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="手机注册"
            android:textColor="#1E539C"
            android:textSize="15dp" />
        <RadioButton
            android:id="@+id/userfankui_right"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:button="@null"
            android:text="邮箱注册"
            android:background="@color/colorWhite"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_weight="1" />
    </RadioGroup>


    <android.support.v4.view.ViewPager
        android:layout_marginTop="30px"
        android:id="@+id/userfankui_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>

</LinearLayout>