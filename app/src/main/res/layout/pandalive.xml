<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp">
            <android.support.design.widget.TabLayout
                android:id="@+id/tab_live"
                app:tabSelectedTextColor="@color/colorPrimaryDark"
                tabIndicatorColor="@color/colorPrimaryDark"
                app:tabIndicatorColor="@color/colorPrimary"
                android:layout_width="fill_parent"
                android:layout_height="50dp"></android.support.design.widget.TabLayout>
        </LinearLayout>


    </HorizontalScrollView>

   <com.example.administrator.pandatv.viewpager.NonSwipeableViewPager
       android:layout_width="match_parent"
       android:id="@+id/pandaLive_pager"
       android:layout_height="match_parent"></com.example.administrator.pandatv.viewpager.NonSwipeableViewPager>
</LinearLayout>