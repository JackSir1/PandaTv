<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<ImageView
    android:id="@+id/livechina_adapter_imge"
    android:layout_width="match_parent"
    android:src="@drawable/_tw"
    android:scaleType="centerCrop"
    android:layout_height="200dp"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:background="@color/colorWhite"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:text="[正在直播]"/>
        <TextView
            android:id="@+id/livechina_adapter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:paddingLeft="5dp"
            android:text="八达岭南四楼"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/livechina_ada_linear_jianjie"
        android:layout_width="match_parent"
        android:paddingLeft="5dp"
        android:background="@color/colorWhite"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textSize="15dp"
            android:paddingRight="150dp"
            android:text="简介"/>
        <CheckBox
            android:id="@+id/livechina_adapter_conimag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:button="@null"
            android:layout_gravity="center_vertical"
            android:background="@drawable/livechina_jianjie"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorHui"/>
    <TextView
        android:visibility="visible"
        android:id="@+id/livechina_adapter_jianjie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:text="简介内容"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorHui"/>

</LinearLayout>