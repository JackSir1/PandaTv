<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:scrollbars="none"
    android:padding="10dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:padding="10dp"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingBottom="5dp"
        android:src="@drawable/com_facebook_tooltip_black_xout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="切换栏目"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />

        <Button
            android:id="@+id/licechina_add_button"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_white_corner"
            android:text="编辑"/>
    </LinearLayout>
    <!--<WebView-->
        <!--android:id="@+id/webview"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->
    <!--</WebView>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <com.example.administrator.pandatv.module.chinaLive.MyGridLayout
        android:id="@+id/dragable_myGridLayout"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content" >
    </com.example.administrator.pandatv.module.chinaLive.MyGridLayout>
   <!--<ImageView-->
       <!--android:layout_width="wrap_content"-->
       <!--android:layout_height="wrap_content" -->
       <!--/>-->
    </RelativeLayout>
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="点击添加更多栏目"
        android:layout_marginBottom="20dp"
    android:textColor="@color/colorWhite"
    android:textSize="20dp"/>
    <com.example.administrator.pandatv.module.chinaLive.MyGridLayout
        android:id="@+id/dis_dragable_myGridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.example.administrator.pandatv.module.chinaLive.MyGridLayout>
</LinearLayout>

</ScrollView>