<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="wrap_content">
    <CheckBox
        android:id="@+id/history_radiobutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableLeft="@drawable/selector_check"
        android:drawablePadding="5dp"
        android:layout_gravity="center_vertical"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/history_image"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_launcher"/>
        <LinearLayout
            android:layout_marginTop="55dp"
            android:orientation="horizontal"
            android:background="@drawable/lpanda_bottom_gra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView

                android:src="@drawable/home_play_icon"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/x10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/data_top"
                android:paddingLeft="@dimen/x20"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:text="00:31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/history_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="大熊猫圆舟迎来7岁生日"/>
    <TextView
        android:id="@+id/history_info_time"
        android:layout_width="match_parent"
        android:layout_marginTop="45dp"
        android:layout_height="wrap_content"
        android:text="2017-07-20  15:14"/>
</LinearLayout>

</LinearLayout>