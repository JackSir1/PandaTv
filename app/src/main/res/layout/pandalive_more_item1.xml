<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:background="@drawable/aaa"
            android:layout_height="20dp"
            android:layout_above="@+id/tv_pandalive_more"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="asfdasfasfasfa"
            android:id="@+id/tv_pandalive_more"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/image_pandalive_more"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignParentStart="true">
            <ImageView
                android:layout_width="10dp"
                android:background="@drawable/pppp"
                android:layout_height="10dp"
                android:id="@+id/imageView2"
                android:layout_alignTop="@+id/textView3"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live"
                android:textColor="#fff"
                android:id="@+id/textView3"
                android:layout_marginStart="13dp"
                android:layout_above="@+id/multiangle_title"
                android:layout_toEndOf="@+id/imageView2" />


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/image_pandalive_more"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</RelativeLayout>